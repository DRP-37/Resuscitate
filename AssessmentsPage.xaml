<Page
    x:Class="Resuscitate.AssessmentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Resuscitate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="BackButton" Content="Back" Margin="1058,522,0,0"  VerticalAlignment="Top" Height="77" Width="163" FontWeight="Bold" FontFamily="Microsoft JhengHei" FontSize="24" BorderThickness="2,2,2,2" RequestedTheme="Default" Background="#33BCBCBC" BorderBrush="#7F000000" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False" Click="BackButton_Click"/>
        <Button x:Name="ConfirmButton" Content="Confirm" Margin="1058,424,0,0"  VerticalAlignment="Top" Height="77" Width="163" FontWeight="Bold" FontFamily="Microsoft JhengHei" FontSize="24" BorderThickness="2,2,2,2" RequestedTheme="Default" Background="#33BCBCBC" BorderBrush="#7F000000" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False" Click="ConfirmButton_Click"/>
        <TextBox x:Name="TimeView" HorizontalAlignment="Center" IsTabStop="False" Margin="0,10,0,0" Text="{x:Bind Mode=OneWay, Path=TimingCount.Time}" TextWrapping="Wrap" VerticalAlignment="Top" Height="96" Width="227" TextChanged="TimeView_TextChanged" FontSize="72" BorderBrush="#00000000" TextAlignment="Center" IsReadOnly="True" ManipulationMode="System" FocusVisualPrimaryBrush="#00000000" SelectionHighlightColor="#00E81123" Foreground="#01000000" FocusVisualSecondaryBrush="Transparent" BorderThickness="0,0,0,0"/>

        <Button x:Name="colour0" Content="Pale" Margin="330,405,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="colour_Click"/>
        <Button x:Name="colour1" Content="Blue" Margin="576,405,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="colour_Click"/>
        <Button x:Name="colour2" Content="Pink" Margin="823,405,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="colour_Click"/>

        <Button x:Name="hr0" Content="Absent" Margin="330,629,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="hr_Click"/>
        <Button x:Name="hr1" Content="&lt;100 bpm" Margin="576,629,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="hr_Click"/>
        <Button x:Name="hr2" Content="&gt;100 bpm" Margin="823,629,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" Background="White" BorderBrush="Black" Click="hr_Click"/>

        <Button x:Name="tone0" Content="Floppy" Margin="330,479,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="tone_Click"/>
        <Button x:Name="tone1" Content="Some Tone" Margin="575,479,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="tone_Click"/>
        <Button x:Name="tone2" Content="Good Tone" Margin="823,479,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="tone_Click"/>

        <Button x:Name="resp0" Content="No Breathing Effort" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" Background="White" BorderBrush="Black" Click="resp_Click" Margin="330,555,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="resp1" Content="Inadequate Breathing" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="18" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="resp_Click" Margin="575,555,0,0" VerticalAlignment="Top"/>
        <Button x:Name="resp2" Content="Regular Breathing" RenderTransformOrigin="0.5,0.5" Height="45" Width="198" FontSize="18" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="resp_Click" Margin="823,555,0,0" VerticalAlignment="Top"/>


        <TextBlock HorizontalAlignment="Left" Margin="66,130,0,0" Text="Cord Clamping" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="276" FontSize="28" FontWeight="Normal"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,634,0,0" Text="Heartrate" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="142" FontSize="26"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,484,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="142" Text="Tone" FontSize="26"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,559,0,0" Text="Breathing" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="131" FontSize="26"/>

        <Button x:Name="cord0" Content="Immediate" Margin="330,133,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="cord_Click"/>
        <Button x:Name="cord1" Content="Clamped Now" Margin="576,133,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="cord_Click"/>
        <Button x:Name="cord2" Content="Delayed" Margin="823,133,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="cord_Click"/>

        <Button x:Name="temp0" Content="Dry &amp; Wrap" Margin="330,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="temp_Click"/>
        <Button x:Name="temp1" Content="Plastic Bag (Preterm)" Margin="575,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="19.5" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="temp_Click"/>
        <Button x:Name="temp2" Content="Woolly Hat (Term)" Margin="823,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="45" UseLayoutRounding="False" Width="198" d:LayoutRounding="Auto" FontSize="20" IsRightTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" Background="White" BorderBrush="Black" Click="temp_Click"/>

        <TextBlock HorizontalAlignment="Left" Margin="66,184,0,0" Text="Temperature Regulations" TextWrapping="Wrap" VerticalAlignment="Top" Height="83" Width="276" FontSize="28" FontWeight="Normal"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,414,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="142" Text="Colour" FontSize="26"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,352,0,0" Text="Other Observations" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="409" FontSize="36" FontWeight="Normal"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,279,0,0" Text="Estimated Weight" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="244" FontSize="28" FontWeight="Normal"/>
        <TextBox x:Name="EstimatedWeight" HorizontalAlignment="Left" Height="48" Margin="330,279,0,0" Text="" VerticalAlignment="Top" Width="73" FontSize="30" BorderBrush="#FF3E3E40" InputScope="Number" TextChanged="EstimatedWeight_TextChanged" TextAlignment="Left"/>
        <TextBlock HorizontalAlignment="Left" Margin="408,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="60" Text="kg" FontSize="30"/>
    </Grid>
</Page>
