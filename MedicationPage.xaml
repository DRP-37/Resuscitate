        <TextBlock x:Name="Surfactant240Dose" HorizontalAlignment="Left" Margin="758,483,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="24" Height="32"/>
        <TextBlock HorizontalAlignment="Left" Margin="700,84,0,0" Text="Doses Given" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="22" Height="32" FontWeight="Bold"/>
    </Grid>
</Page>
