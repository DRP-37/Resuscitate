        <TextBlock HorizontalAlignment="Left" Margin="96,433,0,0" Text="Surfactant via ETT 120mg" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="24" Height="33"/>
        <TextBlock HorizontalAlignment="Left" Margin="96,483,0,0" Text="Surfactant via ETT 240mg" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="24" Height="32"/>
