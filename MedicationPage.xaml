        <TextBlock HorizontalAlignment="Left" Margin="96,233,0,0" Text="Sodium Bicarbonate 4.2% (2 to 4 mls/kg) IV" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="24" Height="33"/>
        <TextBlock HorizontalAlignment="Left" Margin="96,283,0,0" Text="Dextrose (2.5mls/kg) IV" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Microsoft JhengHei UI" FontSize="24" Height="33"/>
