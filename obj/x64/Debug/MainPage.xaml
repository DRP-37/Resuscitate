<Page
    x:Class="Resuscitate.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Resuscitate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='2' x:Name="StartButton" Margin="0,203,0,0"  VerticalAlignment="Top" Height="125" Width="248" FontWeight="Bold" FontFamily="Microsoft JhengHei" FontSize="24" BorderThickness="2,2,2,2" RequestedTheme="Default" Background="#33BCBCBC" BorderBrush="#7F000000" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False"                     HorizontalAlignment="Center">
            <TextBlock TextAlignment="Center"><Run Text="Perform"/><LineBreak/><Run Text="Resuscitation"/></TextBlock>
        </Button>
        <Button x:ConnectionId='3' x:Name="ReviewButton" Height="125" Width="248" FontWeight="Bold" FontFamily="Microsoft JhengHei" FontSize="24" BorderThickness="2,2,2,2" RequestedTheme="Default" Background="#33BCBCBC" BorderBrush="#7F000000" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False"                            HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top">
            <TextBlock TextAlignment="Center"><Run Text="Review"/><LineBreak/><Run Text="Resuscitation"/></TextBlock>
        </Button>

    </Grid>
</Page>


